# Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
WEBHOOK_URL=https://yourdomain.com/webhook

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/shopbot
DATABASE_URL_DEV=sqlite:///./shopbot.db

# NOWPayments API
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_IPN_SECRET=your_ipn_secret
NOWPAYMENTS_SANDBOX=true

# Security
SECRET_KEY=your-super-secret-key-change-this
JWT_SECRET_KEY=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# Redis (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Admin Panel
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password
ADMIN_EMAIL=admin@yourshop.com

# File Storage (Cloudinary or AWS S3)
CLOUDINARY_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_bucket_name
AWS_REGION=us-east-1

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Application Settings
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,zip,rar

# Payment Settings
MINIMUM_ORDER_AMOUNT=1.00
MAXIMUM_ORDER_AMOUNT=10000.00
PAYMENT_TIMEOUT_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=1000

# Backup Settings
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Analytics
GOOGLE_ANALYTICS_ID=GA_TRACKING_ID

# Multi-language
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,lt